<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadFileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/uploadFileSocialMediaTypeId"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        android:gravity="center"
        android:text="SocialMediaType"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />


    <Button
        android:id="@+id/uploadFileChoseFileButtonId"
        android:text="Chose File"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />

    <ImageView
        android:id="@+id/uploadFileImageId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/uploadFileChoseFileButtonId"
        app:srcCompat="@drawable/ic_launcher_background"/>


    <EditText
        android:id="@+id/uploadFileEnterMessageEditTextId"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:elevation="10dp"
        android:gravity="center"
        android:layout_below="@id/uploadFileImageId"
        android:text="Enter Message"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <EditText
        android:id="@+id/uploadFileEnterSearchKeywordEditTextId"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        android:gravity="center"
        android:layout_below="@id/uploadFileEnterMessageEditTextId"
        android:text="Enter Search Keyword"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />



    <Button
        android:id="@+id/uploadFileButtonId"
        android:text="Upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_below="@id/uploadFileEnterSearchKeywordEditTextId"
        android:layout_marginTop="10dp"
        />

    <ProgressBar
        android:id="@+id/uploadFileProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/uploadFileButtonId"
        android:layout_marginTop="20dp"/>





</RelativeLayout>

</ScrollView >