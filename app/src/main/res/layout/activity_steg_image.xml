<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StegImageActivity">


    <Button
        android:id="@+id/stegImageChoseFileButton"
        android:text="Chose File"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/stegImageRawImageView"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/stegImageChoseFileButton"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/ic_launcher_background" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/stegImageRawGifView"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_below="@id/stegImageChoseFileButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/stegImageEnterMessageEditText"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-25dp"
        android:elevation="10dp"
        android:gravity="center"
        android:text="Enter Message"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@id/stegImageRawImageView"/>

    <Button
        android:id="@+id/stegImageComputeStegButton"
        android:text="Compute Steg Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:layout_below="@id/stegImageEnterMessageEditText"
        />



    <ImageView
        android:id="@+id/stegImageSteganographedImageView"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-30dp"
        app:srcCompat="@drawable/ic_launcher_background"
        android:layout_below="@id/stegImageComputeStegButton"/>





    <Button
        android:id="@+id/stegImageDecodeButtonId"
        android:text="Decode Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/stegImageSteganographedImageView"
        />

    <TextView
        android:id="@+id/stegImageDecodedTextId"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_marginTop="-40dp"
        android:elevation="10dp"
        android:gravity="center"
        android:text="Nothing To See"
        android:layout_below="@id/stegImageDecodeButtonId"
        />

    <EditText
        android:id="@+id/stegImageEnterFileNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="112dp"
        android:layout_below="@id/stegImageDecodedTextId"
        android:layout_alignParentStart="true"

        android:layout_alignParentBottom="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="-38dp"
        android:layout_marginBottom="14dp"
        android:elevation="10dp"
        android:gravity="center"
        android:text="EnterFileName"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:id="@+id/stegImageSaveToStorageButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stegImageDecodedTextId"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="-35dp"
        android:layout_marginEnd="42dp"
        android:text="Save Encoded Image" />


</RelativeLayout>